<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_background_layout_popup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15sp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:src="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category Name"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:textColor="#000"
                android:textSize="20sp"/>
            <Spinner
                android:id="@+id/category_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/text_background_design"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:padding="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Category Name"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:textColor="#000"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/current_category_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_marginTop="10sp"
                android:hint="CURRENT ITEM NAME"
                android:background="@drawable/text_background_design"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:padding="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:textColor="#000"
                android:textSize="20sp"/>
            <Spinner
                android:id="@+id/category_name_status_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/text_background_design"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:padding="15sp"
                />
            <Button
                android:id="@+id/submit_edited_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25sp"
                android:layout_marginRight="25sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/rounded_button_green"
                android:text="SUBMIT"
                android:textColor="#FFF"
                android:layout_marginBottom="15sp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>